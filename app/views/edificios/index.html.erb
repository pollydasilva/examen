<%= render 'layouts/navbar' %>
<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Edificios</h1>
</div>

<div class="container">
  <table>
    <thead>
      <tr>
        <th>Nombre de Edificio</th>
        <th>Dirección</th>
        <th>Ciudad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @edificios.each do |edificio| %>
        <tr>
          <td><%= edificio.nombre_de_edificio %></td>
          <td><%= edificio.direccion %></td>
          <td><%= edificio.ciudad %></td>
          <td><button type="button" class="btn btn-outline-success btn-sm"><%= link_to 'Mostrar', edificio %></button></td>
          <td><button type="button" class="btn btn-outline-success btn-sm"><%= link_to 'Editar', edit_edificio_path(edificio) %></button></td>
          <td><button type="button" class="btn btn-outline-success btn-sm"><%= link_to 'Eliminar', edificio, method: :delete, data: { confirm: '¿Estás seguro?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="container">
  <a  
    class="btn btn-success btn-lg btn-block" 
    href="/edificios/new"
    style='color: #FFF !important'
    >
    Crea un nuevo Edificio
  </a>
</div>

<%= render 'layouts/footer' %>
