<div class='container'>
  <%= form_with(model: departamento) do |form| %>
    <% if departamento.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(departamento.errors.count, "error") %> No se puede guardar este departamento:</h2>

        <ul>
          <% departamento.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for='numDepto'> <%= form.label :numero_de_departamento %></label>
      <%= form.text_field :numero_de_departamento, {id: 'numDpto', class: 'form-control'} %>
    </div>

    <div class="form-group">
      <label for='departamento_edificio_id'><%= form.label :edificio_id %></label>
      <!-- No sé cómo arreglar la línea 23 sorry :( -->
      <%= form.select :edificio_id, options_from_collection_for_select(p_edificios, :id, :nombre, p_departamento.edificio_id), {include_blank: "Seleccionar un hotel"}, class: 'form-select' %>
    
    </div>

    <div>
      <%= form.submit 'Crear departamento' , :class => 'btn btn-success' %>
    </div>
  <% end %>
  <br/>
  <%= link_to 'Atrás', departamentos_path %>
</div>
